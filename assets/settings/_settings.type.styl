//Typography
//Use REM for better pixelation on breakpoints based on :root 16px

font-family-primary 	= 'Montserrat', arial, sans-serif
font-family-secondary 	= font-family
font-family-icons 		= fontawesome
font-family-mono		= 'Source Code Pro', monospace

base-font-size 			= 1rem //Based on :root 16px
base-line-height		= 1.6

h1						= 3.1rem
h2						= 2.5rem
h3						= 1.8rem
h4						= 1.5rem
h5						= 1.25rem
h6						= 1.125rem

small					= 0.75rem
x-small					= 0.625rem